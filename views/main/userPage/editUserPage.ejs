<% layout('./layouts/boilerplate') %>
<div class="container">
  <div class="mx-auto" style="width: 80%">
    <h1 class="headerColor">Editar Cuenta</h1>
    <form action="/profile/edit/<%=user.id%>?_method=PATCH" method="POST">
      <div class="form-group mb-3">
        <label for="username" class="headerColor">Nombre de usuario</label>
        <input
          type="text"
          class="form-control"
          id="username"
          name="username"
          placeholder="create a username"
          value="<%=user.username%>"
        />
      </div>
      <div
        id="usernameError"
        class="alert alert-danger"
        role="alert"
        style="display: none"
      ></div>

      <div class="form-group mb-3">
        <label for="email" class="headerColor">Email</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          placeholder="email"
          value="<%=user.email%>"
        />
      </div>
      <div
        id="emailError"
        class="alert alert-danger"
        role="alert"
        style="display: none"
      ></div>

      <div class="form-group mb-3">
        <label for="name" class="headerColor">Nombre</label>
        <input
          type="text"
          class="form-control"
          id="name"
          name="name"
          placeholder="first name"
          value="<%=user.name%>"
        />
      </div>

      <div class="form-group mb-3">
        <label for="surname" class="headerColor">Apellidos</label>
        <input
          type="text"
          class="form-control"
          id="surname"
          name="surname"
          placeholder="surname"
          value="<%=user.surname%>"
        />
      </div>

      <div class="form-group mb-3">
        <label for="phone" class="headerColor">Telefono</label>
        <input
          type="text"
          class="form-control"
          id="phone"
          name="phone"
          placeholder="phone"
          value="<%=user.phone%>"
        />
      </div>

      <div class="form-group mb-3">
        <label for="city" class="headerColor">Ciudad</label>
        <input
          type="text"
          class="form-control"
          id="city"
          name="city"
          placeholder="city"
          value="<%=user.city%>"
        />
      </div>
      <div class="form-group mb-3">
        <label for="zipcode" class="headerColor">Zip Code</label>
        <input
          type="text"
          class="form-control"
          id="zipcode"
          name="zipcode"
          placeholder="city"
          value="<%=user.zipcode%>"
        />
      </div>
      <button id="subButton" type="submit" class="btn btn-primary mt-3">
        Editar la informacion
      </button>
    </form>
  </div>
</div>

<script src="/js/checkIfUsernameIsUnique.js"></script>
