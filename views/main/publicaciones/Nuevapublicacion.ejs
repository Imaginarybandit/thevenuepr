<% layout('./layouts/boilerplate') %>
<div class="container my-5">
  <div class="row">
    <div class="col-lg-8">
      <!-- Main Content -->
      <h1 class="mb-4 headerColor">Create New Publication</h1>
      <form
        action="/<%=groupId%>/publicacion/new"
        method="POST"
        enctype="multipart/form-data"
      >
        <div class="form-group">
          <label for="postTitle" class="headerColor">Nombre</label>
          <input
            type="text"
            class="form-control"
            id="postTitle"
            name="title"
            placeholder="Enter post title"
            required
          />
        </div>
        <div class="form-group">
          <label for="postContent" class="headerColor">Descripcion</label>
          <textarea
            class="form-control"
            id="postContent"
            name="content"
            rows="10"
            placeholder="Write your post content"
          ></textarea>
        </div>

        <div class="form-group">
          <label for="postDate" class="headerColor">Fecha</label>
          <input
            type="date"
            class="form-control"
            id="postDate"
            name="date"
            placeholder="Enter post date"
            required
          />
        </div>

        <div class="form-group">
          <label for="postImage" class="headerColor">Image</label>
          <input
            type="file"
            class="form-control"
            id="publicationImage"
            name="publicationImage"
            placeholder="Enter post image"
          />
        </div>

        <div class="form-group">
          <label for="postLocalizacion" class="headerColor">Localizacion</label>
          <input
            type="text"
            class="form-control"
            id="postLocalizacion"
            name="localizacion"
            required
          />
        </div>
        <div class="form-group">
          <label for="city" class="headerColor">Ciudad</label>
          <input
            type="text"
            class="form-control"
            id="city"
            name="city"
            required
          />
        </div>

        <div class="form-group">
          <label for="zipcode" class="headerColor">Zip Code</label>
          <input
            type="text"
            class="form-control"
            id="zipcode"
            name="zipcode"
            required
          />
        </div>

        <button type="submit" class="btn btn-primary mt-3">
          Crear Publicacion
        </button>
      </form>
    </div>
  </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr@4.6.6/dist/flatpickr.min.js"></script>
<script>
  flatpickr("#postDate", {
    locale: "es",
    enableTime: true,
    dateFormat: "Y-m-d H:i",
    time_24hr: true,
  });
</script>
